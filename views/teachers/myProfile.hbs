
<div class="row">

  <div class="col-md-4">
      <img class="rounded mx-auto d-block" src="{{teacher.User.avatar}}"
        style="max-height: 100%; max-width: 100%; margin-top: 20px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    <br>
    <div>
      <span class="fi fi-{{teacher.User.country}}"></span>
      <h5>{{teacher.User.name}}</h5>
      <div><strong>Email：</strong>{{teacher.User.email}}</div>
      <div><strong>Method：</strong>{{teacher.method}}</div>
      <div><strong>ClassLink：</strong>{{teacher.classLink}}</div>
      <div><strong>Description：</strong>{{teacher.User.description}}</div>
    </div>
    <p><a class="btn btn-outline-secondary" href="/teachers/{{teacher.id}}/edit">edit</a></p>
  </div>
  
  <div class="col-md-8">
    <h5>New Courses</h5>
    <div class="row">
      {{#each courses}}
        {{#unless this.isDone}}
            <div class="card m-1" style="width: 22rem">
              <div class="card-body">
                <p><strong>StartTime: </strong>{{this.date}}　{{this.startTime}}</p>
                <p><strong>EndTime: </strong>{{this.date}}　{{this.endTime}}</p>
                <p><strong>User: </strong>{{this.userId}}</p>
              </div>
            </div>
        {{/unless}}
      {{/each}}
    </div>
    <hr>

    <h5>History Courses</h5>
    <div class="row">
      {{#each courses}}
        {{#if this.isDone}}
            <div class="card m-1" style="width: 22rem">
              <div class="card-body">
                <p><strong>StartTime: </strong>{{this.date}}　{{this.startTime}}</p>
                <p><strong>EndTime: </strong>{{this.date}}　{{this.endTime}}</p>
                <i class="fas fa-star fa-lg" style="color: #ffff00;"></i>{{this.rate}}
                <p><strong>Message: </strong>{{this.message}}</p>
              </div>
            </div>
        {{/if}}
      {{/each}}
    </div>
  </div>

</div>
<hr>
<div class="text-center">
  <a class="btn btn-outline-secondary mt-2" href="javascript:history.back()">Back</a>
</div>