<header>
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary px-4">
    <div class="container-fluid">
      {{#if user.isAdmin}}
        <a class="navbar-brand" href="/admin">Tutor 後台</a>
      {{else}}
        {{#if user.Teacher_info}}
          <a class="navbar-brand" href="/teachers/{{user.Teacher_info.id}}/myProfile">Tutor 平台</a>
        {{else}}
          <a class="navbar-brand" href="/home">Tutor 平台</a>
        {{/if}}
      {{/if}}
      {{#if user}}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
          aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav ms-auto mb-2 mb-md-0">
            {{#if user.isAdmin}}
            {{else}}
                <li class="nav-item d-inline-flex align-items-center">
                  <span class="text-white nav-link">Hi, {{ user.name }}</span>
                </li>
              {{#if user.Teacher_info}}
                <li class="nav-item ">
                  <a href="/teachers/{{user.Teacher_info.id}}/myProfile" class="nav-link">Profile</a>
                </li>
              {{else}}
                <li class="nav-item ">
                  <a href="/users/{{user.id}}" class="nav-link">Profile</a>
                </li>
                <li class="nav-item ">
                  <a href="/teachers/apply" class="nav-link">成為老師</a>
                </li>
              {{/if}}
            {{/if}}
              <li class="nav-item">
                <a href="/logout"><button class="btn btn-warning my-sm-0 my-2">Logout</button></a>
              </li>
          </ul>
        </div>
      {{/if}}
    </div>
  </nav>
</header>