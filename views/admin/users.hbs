{{!-- {{>admin-tabs route='users'}} --}}
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Avatar</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td><img class="img img-thumbnail square-image" src="{{this.avatar}}" style="height: 66px; width: 66px; object-fit: cover; border: none; border-radius: 50%"></td>
      <td><span class="fi fi-{{this.country}}"></span> <a href="/admin/users/{{this.id}}">{{this.name}}</a></td>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td>admin</td>
      {{else}}
      <td>user</td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- Pagination --}}
  <nav class="mt-2" aria-label="page navigation">
    <ul class="pagination d-flex justify-content-center">

      <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
        <a class="page-link" href="/admin/users?page={{pagination.prev}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>

      {{#each pagination.pages}}
      {{#ifCond this ../pagination.currentPage}}
      <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
      {{else}}
      <li class="page-item">
        <a class="page-link" href="/admin/users?page={{this}}">{{this}}</a>
      </li>
      {{/ifCond}}
      {{/each}}

      <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
        <a class="page-link" href="/admin/users?page={{pagination.next}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>

    </ul>
  </nav>
