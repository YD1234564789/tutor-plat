{{!-- {{>admin-tabs route='users'}} --}}
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Avatar</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td><img class="img img-thumbnail square-image" src="{{this.avatar}}" style="height: 70px; width: 70px; object-fit: cover; border: none; border-radius: 50%"></td>
      <td><span class="fi fi-{{this.country}}"></span><a href="/admin/users/{{this.id}}">{{this.name}}</a></td>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td>admin</td>
      {{else}}
      <td>user</td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>